<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.clinica.controladores.ListaPacientesControlador">

    <Label text="Lista de Pacientes" textFill="#0f0f0f">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <!-- TableView for displaying patients -->
    <TableView fx:id="tablaPacientes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colCedula" text="Identificación" />
            <TableColumn fx:id="colNombre" text="Nombre" />
            <TableColumn fx:id="colTelefono" text="Teléfono" />
            <TableColumn fx:id="colEmail" text="Correo" />
            <TableColumn fx:id="colSuscripcion" text="Suscripción" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- TextField for entering new patient details -->
    <TextField fx:id="txtCedula" promptText="Cédula" />
    <TextField fx:id="txtNombre" promptText="Nombre" />
    <TextField fx:id="txtTelefono" promptText="Teléfono" />
    <TextField fx:id="txtEmail" promptText="Correo" />
    <ComboBox fx:id="txtSuscripcion" promptText="Tipo de Suscripción" />
    <Button onAction="#actualizarPaciente" text="Actualizar Paciente" />
   <Button fx:id="btnBorrarPaciente" mnemonicParsing="false" onAction="#borrarPaciente" text="Borrar Paciente" />
</VBox>
