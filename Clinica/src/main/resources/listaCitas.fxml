<!--      prefHeight="400.0" prefWidth="600.0">-->

    <Label text="Lista de Citas" textFill="#0f0f0f">
        <font>
            <Font size="20.0"/>
        </font>
    </Label>


    <TableView fx:id="tablaCitas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="Id" />
            <TableColumn fx:id="colPaciente" text="Paciente" />
            <TableColumn fx:id="colFecha" text="Fecha" />
            <TableColumn fx:id="colServicio" text="Servicio" />
            <TableColumn fx:id="colFactura" text="Factura" />
        </columns>
    </TableView>
    <TextField fx:id="txtId" promptText="Cita Id" />
    <TextField fx:id="txtPaciente" promptText="Nombre Paciente" />
    <DatePicker fx:id="txtFecha" promptText="Fecha Cita" />
    <ComboBox fx:id="txtServicio" promptText="Tipo de Servicio" />
    <TextField fx:id="txtFactura" promptText="Factura" />

    <Button text="Agregar Paciente" onAction="#cargarCitas"/>

</VBox>
